@model Category

<form method="post" asp-action="Delete"> 
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Delete Category</h2>
        <hr />
    </div>
    @* <div asp-validation-summary="All"></div> *@
    <div class="mb-3">
        <label asp-for="Name">Name </label>
        <input asp-for="Name" class="form-control" disabled/>
    </div>
    <div class="mb-3">
        <label asp-for="DiplayOrder">Display Order</label>
        <input asp-for="DiplayOrder" class="form-control" disabled/>
    </div>
    <button type="submit" class="btn btn-primary" style="with:150px">Delete</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150p">
        Back
    </a>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}